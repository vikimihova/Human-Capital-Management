@using static ManagementApp.Common.ApplicationConstants;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManagementApp.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManagementApp.Web.styles.css" asp-append-version="true" />
</head>
<body>      

    <div class="d-flex" style="height: 100vh;">

        <!-- Sidebar -->
        <nav class="d-flex flex-column position-relative" id="sidebar-wrapper" style="width: 300px; height: 100vh; background-color: yellow; position: relative; z-index: 10;">
            <div class="sidebar-heading d-flex justify-content-center align-items-center" style="padding-top: 40px; padding-bottom: 20px;">
                <a class="d-flex justify-content-center align-items-center w-100" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Logo" style="height: 130px;">
                </a>
            </div>
            <div class="list-group list-group-flush d-flex flex-column align-items-start" style="margin-left: 35px;">
                
                @if ((this.User?.Identity?.IsAuthenticated ?? false) && (this.User.IsInRole(ManagerRoleName)))
                {
                    <a class="nav-link text-dark" asp-controller="Record" asp-action="UserRecord">Profile</a>
                    <a class="nav-link text-dark" asp-controller="Record" asp-action="Index">Employees</a>
                }

                @if ((this.User?.Identity?.IsAuthenticated ?? false) && (this.User.IsInRole(AdminRoleName)))
                {
                    <a class="nav-link text-dark" asp-controller="Record" asp-action="UserRecord">Profile</a>
                    <a class="nav-link text-dark" asp-controller="Record" asp-action="Index">Employees</a>
                    <a class="nav-link text-dark" asp-controller="Department" asp-action="Index">Departments</a>
                    <a class="nav-link text-dark" asp-controller="JobTitle" asp-action="Index">Job Titles</a>
                }
            </div>

            
            <div class="flex-grow-1"></div>

            <div class="px-3 pb-3 text-center">
                <partial name="_LoginPartial" />
            </div>
        </nav>
                
        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1 d-flex flex-column" style="height: 100vh;">

            <!-- Blurred Background Layer -->
            <div class="blurred-bg"></div>

            <!-- Centered Foreground Content -->
            <main role="main" class="flex-grow-1 d-flex justify-content-center align-items-center position-relative" style="z-index: 2;">
                <div class="content-box text-center">
                    @RenderBody()
                </div>
            </main>
        </div>

    </div>    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
